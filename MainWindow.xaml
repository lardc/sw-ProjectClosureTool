<Window x:Class="ProjectClosureToolMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectClosureToolMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:WindowBind/>
    </Window.DataContext>
    <Grid Margin="0,9,0,0">
        <Button
            Content="Download"
            HorizontalAlignment="Left"
            Margin="37,45,0,0"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.396,1.58" Click="Button_Click"/>
        <TextBox
            x:Name="textBox1"
            HorizontalAlignment="Left"
            Margin="112,46,0,0"
            TextWrapping="Wrap" 
            Text="{Binding BoardCode, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top"
            Width="120" TextChanged="TextBox_TextChanged_1"/>
        <TextBox
            x:Name="textBox2"
            HorizontalAlignment="Left"
            Margin="252,46,0,0"
            TextWrapping="Wrap"
            Text="{Binding APIKey, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top"
            Width="120" TextChanged="TextBox_TextChanged_2"/>
        <TextBox
            x:Name="textBox3"
            HorizontalAlignment="Left"
            Margin="392,46,0,0"
            TextWrapping="Wrap"
            Text="{Binding MyTrelloToken, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top"
            Width="120"
            RenderTransformOrigin="0.117,2.536" TextChanged="TextBox_TextChanged_3"/>
        <Label Content="Board code" HorizontalAlignment="Left" Margin="136,13,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.921,-3.331"/>
        <Label Content="API key" HorizontalAlignment="Left" Margin="290,11,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.921,-3.331"/>
        <Label Content="Trello token" HorizontalAlignment="Left" Margin="411,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.921,-3.331"/>
        <DataGrid
            ItemsSource="{Binding LabelModels}"
            HorizontalContentAlignment="Center"
            ColumnWidth="*"
            VerticalContentAlignment="Center"
            Margin="39,110,0,94"
            HorizontalAlignment="Left"
            AutoGenerateColumns="False" Width="207">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Label" Binding="{Binding Label}"></DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Ignored" Binding="{Binding IsIgnored}"></DataGridCheckBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid
            ItemsSource="{Binding UnitModels}"
            HorizontalContentAlignment="Center"
            ColumnWidth="*"
            VerticalContentAlignment="Center"
            Margin="251,109,0,95"
            HorizontalAlignment="Left"
            AutoGenerateColumns="False" Width="207">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Unit" Binding="{Binding Label}"/>
                <DataGridCheckBoxColumn Header="Selected" Binding="{Binding IsIgnored}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid
            ItemsSource="{Binding CombinationModels}"
            HorizontalContentAlignment="Center"
            ColumnWidth="*"
            VerticalContentAlignment="Center"
            Margin="468,108,0,96"
            HorizontalAlignment="Left"
            AutoGenerateColumns="False" Width="207">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Combination" Binding="{Binding Label}"/>
                <DataGridCheckBoxColumn Header="Selected" Binding="{Binding IsIgnored}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
